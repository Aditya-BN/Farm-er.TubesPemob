<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#212121"
    android:orientation="vertical"
    tools:context=".HalamanUtama">

    <TextView
        android:id="@+id/klik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/open_sans_extrabold"
        android:text="Farm.er"
        android:textAlignment="center"
        android:textSize="25dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#8d93ab"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:id="@+id/sliderdots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewPager"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/square"
                android:fontFamily="@font/open_sans_extrabold"
                android:text="PRODUK KAMI"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp"
                android:text="SAYUR"
                android:textSize="20dp"
                android:fontFamily="@font/open_sans_extrabold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:background="@android:color/darker_gray"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/frame_kentang"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:elevation="5dp"
                            app:cardCornerRadius="8dp">

                            <ImageView
                                android:id="@+id/kentang"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/kentang" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:paddingTop="80dp"
                            android:text="KENTANG"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:paddingTop="110dp"
                            android:text="Rp. 10.500/kg"
                            android:textAlignment="center"
                            android:textSize="15dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="255dp"
                        android:layout_marginLeft="15dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="8dp"
                            android:elevation="5dp">
                            <ImageView
                                android:id="@+id/caberawit"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/caberawit"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="80dp"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:text="CABE RAWIT"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="120dp"
                            android:clickable="false"
                            android:text="Rp. 7.000/Ons"
                            android:textSize="15dp"
                            android:textAlignment="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="255dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="8dp"
                            android:elevation="5dp">
                            <ImageView
                                android:id="@+id/cabe"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@mipmap/cabe"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="80dp"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:text="CABE MERAH"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="120dp"
                            android:clickable="false"
                            android:text="Rp. 5.000/Ons"
                            android:textSize="15dp"
                            android:textAlignment="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:elevation="5dp"
                            app:cardCornerRadius="8dp">

                            <ImageView
                                android:id="@+id/jagung"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/jagung" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:paddingTop="80dp"
                            android:text="JAGUNG"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:paddingTop="120dp"
                            android:text="Rp. 4.000/kg"
                            android:textAlignment="center"
                            android:textSize="15dp" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="255dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="8dp"
                            android:elevation="5dp">
                            <ImageView
                                android:id="@+id/terong"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@mipmap/terong"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="80dp"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:text="TERONG"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="120dp"
                            android:clickable="false"
                            android:text="Rp. 5.000/kg"
                            android:textSize="15dp"
                            android:textAlignment="center"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="255dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="8dp"
                            android:elevation="5dp">
                            <ImageView
                                android:id="@+id/timun"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@mipmap/timun"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="80dp"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:text="TIMUN"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="120dp"
                            android:clickable="false"
                            android:text="Rp. 4.000/kg"
                            android:textSize="15dp"
                            android:textAlignment="center"/>
                    </FrameLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp"
                android:text="BUAH"
                android:textSize="20dp"
                android:fontFamily="@font/open_sans_extrabold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:background="@android:color/darker_gray"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="255dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="8dp"
                            android:elevation="5dp">
                            <ImageView
                                android:id="@+id/apel"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@mipmap/apel"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="80dp"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:text="APEL"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="120dp"
                            android:clickable="false"
                            android:text="Rp. 25.000/kg"
                            android:textSize="15dp"
                            android:textAlignment="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="255dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="8dp"
                            android:elevation="5dp">
                            <ImageView
                                android:id="@+id/mangga"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@mipmap/mangga"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="80dp"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:text="MANGGA"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="120dp"
                            android:clickable="false"
                            android:text="Rp. 20.000/kg"
                            android:textSize="15dp"
                            android:textAlignment="center"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="255dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="8dp"
                            android:elevation="5dp">
                            <ImageView
                                android:id="@+id/pisang"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@mipmap/pisang"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="80dp"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:text="PISANG"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="120dp"
                            android:clickable="false"
                            android:text="Rp. 14.500/kg"
                            android:textSize="15dp"
                            android:textAlignment="center"/>
                    </FrameLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:text="TAMPILKAN SEMUA PRODUK"
                android:background="@drawable/button_border"/>

            <Button
                android:id="@+id/infokami"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:text="TENTANG KAMI"
                android:textSize="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/open_sans_extrabold"
                android:background="@drawable/button_border"/>

            <ViewFlipper
                android:id="@+id/flipper"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp">

                <ImageView
                    android:id="@+id/gambar1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/sawah" />

                <ImageView
                    android:id="@+id/gambar2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/caberawit"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/gambar3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/cabe"
                    android:scaleType="centerCrop"/>
            </ViewFlipper>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:text="MAPS"
                android:textSize="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/open_sans_extrabold"
                android:background="@drawable/square"/>

            <ImageView
                android:id="@+id/map"
                android:layout_width="390dp"
                android:layout_height="240dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:src="@mipmap/mapslokasi"
                android:scaleType="centerCrop"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:background="#8d93ab">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telp: 021 88990011"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: paboyah@gmail.com"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat: Jalan Gedung Gede Yogyakarta City"
                    android:textSize="18dp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>